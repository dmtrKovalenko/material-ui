{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./build",
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["src/**/*.d.ts", "src/**/*.test.*", "./**/*.spec.*", "**/test-utils.tsx"]
}
